{
    "version": 2,
    "builds": [
        {
            "src": "/public/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "/api/index.php",
            "use": "@vercel/php"
        }
    ],
    "rewrites": [
        {
            "source": "/(css|js|images|storage|favicon.ico)(.*)",
            "destination": "/public/$1$2"
        },
        {
            "source": "/(.*)",
            "destination": "/api/index.php"
        }
    ]
}